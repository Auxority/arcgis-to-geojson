{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Node 16",
	"compilerOptions": {
		"lib": [
			"DOM",
			"ES2021"
		],
		"outDir": "dist",
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es2021",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"src/**/*"
	]
}